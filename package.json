{
  "name": "vscode-tui-language-support",
  "displayName": "vscode-tui-language-support",
  "description": "tui Language Support for VSCode.",
  "version": "0.1.0",
  "license": "MIT",
  "publisher": "pythooonuser",
  "author": {
    "name": "Felix Siebeneicker"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pythooonuser/vscode-tui-language-support"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tui",
        "aliases": [
          "Tui",
          "tui"
        ],
        "extensions": [
          ".tui"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tui",
        "scopeName": "source.tui",
        "path": "./syntaxes/tui.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "vscode-tui-language-support",
      "properties": {
        "tuiLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems shown."
        }
      }
    }
  },
  "main": "dist/src/client/client",
  "scripts": {
    "compile": "tsc -b",
    "test": "mocha --require ts-node/register **/*.test.ts",
    "utils:lexer": "node --require ts-node/register ./tools/lexer-utils.ts",
    "utils:parser": "node --require ts-node/register ./tools/parser-utils.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.3",
    "@types/vscode": "^1.99.1",
    "mocha": "^11.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
